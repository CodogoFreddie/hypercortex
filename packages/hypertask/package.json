{
	"name": "@hypercortex/hypertask",
	"publishConfig": {
		"access": "public"
	},
	"version": "0.4.4",
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-eslint": "^9.0.0",
		"babel-preset-freddie-ridell": "0.0.8",
		"eslint": "^5.5.0",
		"eslint-config-react-app": "^2.1.0",
		"eslint-plugin-flowtype": "^2.50.0",
		"eslint-plugin-import": "^2.14.0",
		"eslint-plugin-jsx-a11y": "^6.1.1",
		"eslint-plugin-react": "^7.11.1",
		"prettier": "^1.14.2"
	},
	"babel": {
		"presets": [
			"freddie-ridell"
		]
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"files": [
		"/index.js",
		"/lib"
	],
	"prettier": {
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true
	},
	"scripts": {
		"build": "babel src --out-dir lib",
		"format": "prettier --write src/**/*",
		"watch": "babel src --out-dir lib --watch"
	},
	"dependencies": {
		"@hypercortex/wrapper": "^0.4.3",
		"babel-runtime": "^6.26.0",
		"hyperdb": "^3.5.0",
		"random-access-memory": "^3.0.0",
		"wrapper": "^0.1.0"
	}
}
